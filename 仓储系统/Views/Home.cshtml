            background: #eee;
        }

        .section {
            width: 200px;
            margin: 7px auto;
            height: 60px;
            box-shadow: 0 1px 2px rgba( 0, 0, 0, .2 );
            overflow: hidden;
            -webkit-transition: .35s;
            transition: .35s;
            margin: 0px;
        }

        .title {
            padding: 20px;
            padding-top: 20px;
            background: #000000;
            color: #fff;
            cursor: pointer;
            text-shadow: 0 1px 0 #666;
            width: 200px;
            height: 55px;
            text-transform: capitalize;
            font-family: 'Merriweather Sans', sans-serif;
            font-style: italic;
            position: relative;
            -moz-user-select: none;
            -ms-user-select: none;
            -webkit-user-select: none;
            user-select: none;
            z-index: 10;
        }

            .title:before, .title:after {
                content: "";
                display: block;
                position: absolute;
                right: 20px;
                top: 15px;
                font-style: normal;
                height: 21px;
                line-height: 1;
                overflow: hidden;
                font-family: FontAwesome;
                font-size: 20px;
                background: #000000;
                -webkit-transition: .35s;
                transition: .35s;
            }

            .title:before {
                z-index: 2;
            }

            .title:after {
                top: 25px;
                -webkit-transform: rotate( 180deg );
                -ms-transform: rotate( 180deg );
                -moz-transform: rotate( 180deg );
                transform: rotate( 180deg );
            }

        .open .title:before {
            height: 0;
        }

        .body {
            font: 16px open, sans-serif;
            background: #383434;
            padding: 20px 20px 40px;
            height: 480px;
            color: #ffffff;
            -moz-transform: translateY( -100% );
            -ms-transform: translateY( -100% );
            -webkit-transform: translateY( -100% );
            transform: translateY( -100% );
            overflow: hidden;
            -webkit-transition: .35s;
            transition: .35s;
        }

            .body h2 {
                color: #ffffff;
                font-size: 13px;
                margin-bottom: 10px;
            }

                .body h2:before {
                    content: '▪';
                    padding-right: 7px;
                    color: #00C37E;
                }



            .body span {
                font-size: 12px;
            }

        .section.open {
            height: 480px;
        }

        .open .body {
            -webkit-transform: none;
            -ms-transform: none;
            -moz-transform: none;
            transform: none;
        }

        .dropdown {
            position: relative;
            display: inline-block;
            z-index: 2;
            position: absolute;
            left: 1350px;
            top: 20px;
        }

