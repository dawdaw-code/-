<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>
    var pageIndex = 1;
    var pageSize = 10;
    var pageCount = 0;
    var rows = 0;
    $(function () {
        
        PageList();
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;
            laypage.render({
                elem: 'pageDemo'
                , count: rows
                , limit: 10
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    //console.log(obj)
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    PageList();
                }
            });
        });
    });
    //全选以及反选
    $(function () {
        
        //全选加事件
        $("#chkAll").click(function () {
            var f = $(this).prop("checked");	 //获取自己的
            $(".ck").prop("checked", f);
        });

        //删除
        $("#del").click(function () {
            var a = $("tbody input:checked").length;
            if (a == 0) {
                alert("请选择要删除的记录");
            } else {
                var b = confirm("您确定要删除选中的" + a + "条记录吗");
                if (b == true) {
                    var text = $("tbody input:checkbox:checked").map(function (index, elem) {
                        return $(elem).val();
                    }).get().join(',');
                    //alert("选中的checkbox的值为：" + text);
                    var arr = text.split(',');
                    var str = [];
                    for (var i = 0; i < arr.length; i++) {
                        var list = {};
                        list.Id = arr[i];
                        str.push(list);
                    }
                    //alert(JSON.stringify(str));
                    $.ajax({
                        url: "/Text/DeleteOther",
                        data: { list: str },
                        dataType: "json",
                        type: "post",
                        success: function (result) {
                            alert(result);
                            PageList();
                        }
                    });
                }
            }
        });


    });

    //时间格式转化
    function Datte(time) {
        var date = new Date(parseInt(time.substr(6)));
        return date.toLocaleDateString();
    }

    //分页加载全部
    function PageList() {
        var name = $("#Text1").val();
        $.ajax({
            type: "POST",
            url: "/Text/getRole",
            data: "{pageIndex:'" + pageIndex + "',pageSize:'" + pageSize + "',name:'" + name + "'}",
            dataType: "json",
            async: false,
            contentType: "application/json",
            success: function (result) {
                rows = result.PageCount;
                $("#tb1 tr").remove();
                $.each(result.DataList, function (index, data) {

                    $("#tb1").append("<tr><td><input class='ck' value='" + data.Id + "' type='checkbox' name='item' /></td><td>" + data.Id + "</td><td>" + data.RoleNum + "</td><td>" + data.RoleName + "</td><td>" + Datte(data.CreateTime) + "</td><td>" + data.Remark + "</td><td></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm' onclick='divShow(" + data.Id + ")'><i class='layui-icon'>&#xe642;</i></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm' onclick='Del(" + data.Id + ")'><i class='layui-icon'>&#xe640;</i> </button></div></td></tr>");
                });

            },
            //请求失败后的回调函数
            error: function (ex) {
                alert(ex.responseText);
            }
        });
        
    }
    
    //删除单行(修改表示ID)
    function Del(id) {
        if (confirm('是否删除?')) {
            $.ajax({
                type: "POST",
                url: "/Text/delRole",
                data: "{Id:'" + id+"'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("删除成功");
                        layFenYe();
                        PageList();
                    }
                    else {
                        alert("删除失败");
                    }
                },
                error: function (ex) {
                    alert(ex.responseText);
                }
                ,
            });
        }
    }
    //新增
    function insert() {
        var RoleName = $("#Text2").val();
        var Remark = $("#Text3").val();
        
        $.ajax({
            type: "POST",
            url: "/Text/insertRole",
            data: "{RoleName:'" + RoleName + "',Remark:'" + Remark + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("新增成功！");
                    PageList();
                } else {
                    alert("新增失败！");
                }
            },
            error: function (ex) {
                alert(ex.responseText);
            }

        });
    }
    //编辑弹出层
    function divShow(id) {
        layui.use('layer', function () {
            var layer = layui.layer;
            layer.open({
                title: ['添加角色信息', 'font-size:15px'],
                area: ['420px', '190px'], //宽高
                type: 1,
                shade: 0,
                content: $('#hidePage'),
                //btn: ['确定', '关闭'],
                yes: function (index, layero) {
                    //index为当前层索引
                    //layero 为 弹出层对象
                    //在回调函数末尾添加 “return false”可以禁止点击该按钮关闭弹出层
                    return false;
                },
                cancel: function () {//右上角关闭毁回调
                    //return false;
                }
            })
        })
        divselect(id);
    }
    //点击修改查询数据
    function divselect(id) {
        $.ajax({
            type: "POST",
            url: "/Text/Role",
            data: "{Id:'" + id + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    $("#bianhao").val(data.RoleNum);
                    $("#mingchen").val(data.RoleName);
                    $("#biezhu").val(data.Remark);
                })
            },
            error: function (ex) {
                alert(ex.responseText);
            }

        });
    }
    //修改
    function UpdateRole() {
        var id = $("#bianhao").val();
        var RoleName = $("#mingchen").val();
        var Remark = $("#biezhu").val();
        $.ajax({
            type: "POST",
            url: "/Text/update",
            data: "{id:'" + id + "',RoleName:'" + RoleName + "',Remark:'" + Remark + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("修改成功！");
                    PageList();
                } else {
                    alert("修改失败！");
                }
            },
            error: function (ex) {
                alert(ex.responseText);
            }

        });
    }
    //新增弹层
    function xz() {
