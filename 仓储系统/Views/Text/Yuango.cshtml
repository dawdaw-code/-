<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>
    var pageIndex = 1;
    var pageSize = 10;
    var pageCount = 0;
    var rows = 0;
    $(function () {
        PageList();
        layFenYe();
        $("#xz").click(function dasd() {
            $("o", "p").divShow();
        })
    });

    function layFenYe() {
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;

            laypage.render({
                elem: 'pageDemo'
                , count: rows
                , limit: 10
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    //console.log(obj)
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    PageList();
                }
            });
        });
    }

    $("#First").click(function () {
        pageIndex = 1;
        PageList();
        return false;
    });
    $("#Back").click(function () {
        pageIndex--;
        PageList();
        return false;
    });
    $("#Next").click(function () {
        pageIndex++;
        PageList();
        return false;
    });
    $("#Last").click(function () {
        pageIndex = pageCount;
        PageList();
        return false;
    });

    //全选以及反选
    $(function () {
        //全选加事件
        $("#chkAll").click(function () {
            var f = $(this).prop("checked");	 //获取自己的
            $(".ck").prop("checked", f);
        });

        //删除
        $("#del").click(function () {
            var a = $("tbody input:checked").length;
            if (a == 0) {
                alert("请选择要删除的记录");
            } else {
                var b = confirm("您确定要删除选中的" + a + "条记录吗");
                if (b == true) {
                    var text = $("tbody input:checkbox:checked").map(function (index, elem) {
                        return $(elem).val();
                    }).get().join(',');
                    //alert("选中的checkbox的值为：" + text);
                    var arr = text.split(',');
                    var str = [];
                    for (var i = 0; i < arr.length; i++) {
                        var list = {};
                        list.Id = arr[i];
                        str.push(list);
                    }
                    //alert(JSON.stringify(str));
                    $.ajax({
                        url: "/Text/Deleteyuango",
                        data: { list: str },
                        dataType: "json",
                        type: "post",
                        success: function (result) {
                            alert(result);
                            PageList();
                        }
                    });
                }
            }
        });

    });
    
    //分页加载全部
    function PageList() {
        var name = $("#Text1").val();
        $.ajax({
            type: "POST",
            url: "/Text/getDepart",
            data: "{pageIndex:'" + pageIndex + "',pageSize:'" + pageSize + "',name:'" + name + "'}",
            dataType: "json",
            async: false,
            contentType: "application/json",
            success: function (result) {
                rows = result.PageCount;
                $("#tb1 tr").remove();
                $.each(result.DataList, function (index, data) {
                    $("#tb1").append("<tr><td><input class='ck' value='" + data.Id + "' type='checkbox' name='item' /></td><td>" + data.UserName + "</td><td>" + data.UserCode + "</td><td>" + data.RealName + "</td><td>" + data.Email + "</td><td>" + data.Phone + "</td><td>" + data.DepartId + "</td><td>" + data.RoleId + "</td><td></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm' onclick='divShow(" + data.Id + ")'><i class='layui-icon'>&#xe642;</i></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm' onclick='Del(" + data.Id + ")'><i class='layui-icon'>&#xe640;</i> </button></div></td></tr>");
                    
                });

            },
            //请求失败后的回调函数
            error: function (ex) {
                alert(ex.responseText);
            }
        });
        btnState();
    }

    //设置按钮
    function btnState() {
        //先设置所有按钮为可用状态
        $("#divBtn :button").prop("disabled", false);
        if (pageIndex == 1) {
            //禁用首页和上一页
            $("#First").prop("disabled", true);
            $("#Back").prop("disabled", true);
        }
        if (pageIndex == pageCount) {
            //禁用尾页和下一页
            $("#Next").prop("disabled", true);
            $("#Last").prop("disabled", true);
        }
    }

    //删除单行(修改表示ID)
    function Del(id) {
        alert(id)
        if (confirm('是否删除?')) {
            $.ajax({
                type: "POST",
                url: "/Text/delDepart",
                data: "{Id:'" + id+"'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("删除成功");
                        layFenYe();
                        PageList();
                    }
                    else {
                        alert("删除失败");
                    }
                },
                error: function (ex) {
                    alert(ex.responseText);
                }
                ,
            });
        }
    }

    //编辑弹出层
    function divShow(id) {
        layui.use('layer', function () {
            var layer = layui.layer;
            layer.open({
                title: ['修改员工信息', 'font-size:15px'],
                area: ['420px', '190px'], //宽高
                type: 1,
                shade: 0,
                content: $('#hidePage'),
                //btn: ['确定', '关闭'],
                yes: function (index, layero) {
                    //index为当前层索引
                    //layero 为 弹出层对象
                    //在回调函数末尾添加 “return false”可以禁止点击该按钮关闭弹出层
                    return false;
                },
                cancel: function () {//右上角关闭毁回调
                    //return false;
                }
            })
        })
        divselect(id);
    }
    //点击修改查询数据
    function divselect(id)
    {
        $.ajax({
            type: "POST",
            url: "/Text/adminid",
            data: "{Id:'" + id + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    $("#Text6").val(data.UserCode);
                    $("#Text2").val(data.UserName);
                    $("#Text3").val(data.RealName);
                    $("#Text4").val(data.Email);
                    $("#Text5").val(data.Phone);
                    $("#RoleId").val(data.RoleId);
                    $("#DepartId").val(data.DepartId);
                })
            },
            error: function (ex) {
                alert(ex.responseText);
            }

        });
    }
    //修改
    function Update()
    {
       
        var id = $("#Text6").val();
        var UserName = $("#Text2").val();
        var RealName = $("#Text3").val();
        var Email = $("#Text4").val();
        var Phone = $("#Text5").val();
        var DepartId = $("#RoleId").val();
        var RoleId = $("#DepartId").val();
        $.ajax({
            type: "POST",
            url: "/Text/adminidup",
            data: "{id:'" + id + "',UserName:'" + UserName + "',RealName:'" + RealName + "',Email:'" + Email + "',Phone:'" + Phone + "',DepartId:'" + DepartId + "',RoleId:'" + RoleId+"'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("修改成功！");
                    PageList();
                } else
                {
                    alert("修改失败！");
                }
            },
            error: function (ex) {
                alert(ex.responseText);
            }

        });
    }
    //新增
    function insert() {
        var UserName = $("#Text12").val();
        var RealName = $("#Text13").val();
        var Email = $("#Text14").val();
        var Phone = $("#Text15").val();
        var DepartId = $("#hideADD #RoleId").val();
        var RoleId = $("#hideADD #DepartId").val();
        $.ajax({
            type: "POST",
            url: "/Text/insert",
            data: "{UserName:'" + UserName + "',RealName:'" + RealName + "',Email:'" + Email + "',Phone:'" + Phone + "',DepartId:'" + DepartId + "',RoleId:'" + RoleId + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("新增成功！");
                    PageList();
                } else {
                    alert("新增失败！");
                }
            },
            error: function (ex) {
                alert(ex.responseText);
            }

        });
    }
   
    //编辑新增弹出层
    function xz() {
        layui.use('layer', function () {
            var layer = layui.layer;
            layer.open({
                title: ['新增员工信息', 'font-size:15px'],
                area: ['420px', '190px'], //宽高
                type: 1,
                shade: 0,
