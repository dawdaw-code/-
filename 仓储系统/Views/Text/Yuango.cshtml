                //btn: ['确定', '关闭'],
                yes: function (index, layero) {
                    //index为当前层索引
                    //layero 为 弹出层对象
                    //在回调函数末尾添加 “return false”可以禁止点击该按钮关闭弹出层
                    return false;
                },
                cancel: function () {//右上角关闭毁回调
                    //return false;
                }
            })
        })
    }
</script>

