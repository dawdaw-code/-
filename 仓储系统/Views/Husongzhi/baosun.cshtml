<script>
    layui.use('laydate', function () {
        var laydate = layui.laydate;
        laydate.render({
            elem: '#test1' //指定元素
        });
    });

    var pageIndex = 1;
    var pageSize = $("#select1 option:selected").text();
    var pageCount = 0;

    function First() {
        pageIndex = 1;
        PageList();
        return false;
    };

    function Back() {
        pageIndex--;
        PageList();
        return false;
    };

    function Next() {
        pageIndex++;
        PageList();
        return false;
    };

    function Last() {
        pageIndex = pageCount;
        PageList();
        return false;
    };

    $(function () {
        PageList();
        GetBadReportCount();
    });

    //时间格式转化
    function Datte(time) {
        var date = new Date(parseInt(time.substr(6)));
        return date.toLocaleDateString();
    }

    //页面加载
    function PageList() {
        $.ajax({
            type: "post",
            url: "/Husongzhi/GetBadReport",
            data: "{pageIndex:'" + pageIndex + "',pageSize:'" + pageSize + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                pageCount = result.PageCount;
                $("#td1 tr").remove();
                $.each(result.DataList, function (index, data) {
                    $("#td1").append("<tr><td>" + data.BadNum + "</td><td>" + data.BadTypeId + "</td><td>" + data.ProductId + "</td><td>" + data.Num + "</td><td>" + data.SumMoney + "</td><td>" + data.AuditUser + "</td><td>" + data.Operation + "</td><td>" + Datte(data.AuditTime) + "</td> <td><div class='layui-btn-group'><button type='button' class='layui-btn layui-btn-primary layui-btn-sm' ><i class='layui-icon'>&#xe654;</i></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm'><i class='layui-icon'>&#xe642;</i></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm'><i class='layui-icon' onclick='Edit(" + data.BadNum + ")'>&#xe640;</i> </button></div></td></tr>");
                });
            }
        });
    }

    function GetBadReportCount() {
        $.ajax({
            type: "post",
            url: "/Husongzhi/GetBadReportCount",
            data: "{}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#span1").html(result);
            }
        });
    }
    

    //删除（修改代替删除操作，改变状态）
    function Edit(BadNum) {
        alert(BadNum);
        //var data = $("#td1").serializeArray();
        //var obj = {};
        //$.each(data, function (a, b) {
        //    obj[b.name] = b.value;
        //});
        //var jsons = JSON.stringify(obj);
        $.ajax({
            type: "POST",
            url: "/Husongzhi/BadReportEdit",
            data: "{BadNum:'" + BadNum + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    alert("删除成功");
                    PageList();
                }
                else {
                    alert("删除失败");
                }
            },
            error: function (ex) {
                alert(ex.responseText);

            }
            ,
        });
    }
</script>

