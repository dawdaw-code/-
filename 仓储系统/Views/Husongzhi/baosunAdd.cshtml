
@{
    ViewBag.Title = "baosunAdd";
    Layout = "~/Views/Home.cshtml";
}

<h2>新增报损单</h2>
<div>
    <div style="float:left;">
        <label class="control-label" for="txtOrderNum">报损单编号</label>
        <div class="controls">
            <input type="text" lay-verify="title" placeholder="可不填,自动生成" disabled="disabled">
        </div>
    </div>
    <div style="float:left;">
        <div class="control-group">
            <label class="control-label" for="ddlBadType">报损类型</label>
            <div class="controls">
                <select id="ddlBadType" name="ddlBadType" class="span12">
                    <option value="">请选择报损类型</option>
                    <option value="1" selected="selected">损坏报损</option>
                    <option value="2">丢失报损</option>
                </select>
                <span class="help-block"></span>
            </div>
        </div>
    </div>

    <div  style="float:left;">
        <div class="control-group">
            <!--control-group error-->
            <label class="control-label" for="txtContractOrder">关联订单号</label>
            <div class="controls">
                <input type="text" placeholder="">
                <span class="help-block"></span>
            </div>
        </div>
    </div>
    <div  style="float:left;">
        <div class="control-group">
            <label class="control-label" for="txtOrderTime">制单时间</label>
            <div class="controls">
                <input type="text" id="txtOrderTime"  onfocus="WdatePicker()" realvalue="">
                <span class="help-block"></span>
            </div>
        </div>
    </div>
    <div class="control-group" style="float:left;">
        <label class="control-label" for="txtCrateUser">制单人</label>
        <div class="controls">
            <input type="text" id="txtCrateUser"  value="administrator">
            <span class="help-block"></span>
        </div>
    </div>
    <label  >备注</label>
    <div class="controls">
        <input type="text" id="txtRemark" >
        <span class="help-block"></span>
    </div>


