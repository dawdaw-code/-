<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    layui.use('laydate', function () {
        var laydate = layui.laydate;
        laydate.render({
            elem: '#test1' //指定元素
        });
    });

    var pageIndex = 1;
    var pageSize = $("#select1 option:selected").text();
    var pageCount = 0;

    function First() {
        pageIndex = 1;
        PageList();
        return false;
    };

    function Back() {
        pageIndex--;
        PageList();
        return false;
    };

    function Next() {
        pageIndex++;
        PageList();
        return false;
    };

    function Last() {
        pageIndex = pageCount;
        PageList();
        return false;
    };

    $(function () {
        PageList();
        GetCheckStockCount();
    });


    function Datte(time) {
        var date = new Date(parseInt(time.substr(6)));
        return date.toLocaleDateString();
    }

    //页面加载
    function PageList() {
        $.ajax({
            type: "post",
            url: "/Husongzhi/GetCheckStock",
            data: "{pageIndex:'" + pageIndex + "',pageSize:'" + pageSize + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                pageCount = result.PageCount;
                $("#td1 tr").remove();
                $.each(result.DataList, function (index, data) {
                    $("#td1").append("<tr><td>" + data.CheckNum + "</td><td>" + data.CheckTypeId + "</td><td>" + data.DetailNum + "</td><td>" + data.Status + "</td><td>" + data.Operation + "</td><td>" + data.AuditUser + "</td><td>" + Datte(data.AuditTime) + "<td><div class='layui-btn-group'><button type='button' class='layui-btn layui-btn-primary layui-btn-sm'><i class='layui-icon'>&#xe654;</i></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm'><i class='layui-icon'>&#xe642;</i></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm'><i class='layui-icon'>&#xe640;</i> </button></div></td></tr>");
                });
            }
        });
    }

    function GetCheckStockCount() {
        $.ajax({
            type: "post",
            url: "/Husongzhi/GetCheckStockCount",
            data: "{}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $("#span1").html(result);
            }
        });
    }
</script>