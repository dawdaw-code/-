<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>

    var pageIndex = 1;
    var pageSize = 10;
    var pageCount = 0;
    var rows;

    $(function () {
        PageList();

        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;
            laypage.render({
                elem: 'pageDemo'
                , count: rows
                , limit: 10
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    //console.log(obj)
                    pageIndex = obj.curr;
                    pageSize = obj.limit;
                    PageList();
                }
            });
        });

    });

    //时间格式转化
    function Datte(time) {
        var date = new Date(parseInt(time.substr(6)));
        return date.toLocaleDateString();
    }

    //分页加载全部
    function PageList() {
        var name = $("#Text1").val();
        $.ajax({
            type: "POST",
            async: false,
            url: "/Yangwenjie/getCustomerByName",
            data: "{pageIndex:'" + pageIndex + "',pageSize:'" + pageSize + "',name:'" + name + "'}",
            dataType: "json",
            async: false,
            contentType: "application/json",
            success: function (result) {
                rows = result.PageCount;
                $("#tb1 tr").remove();
                $.each(result.DataList, function (index, data) {
                    $("#tb1").append("<tr><td><input type='checkbox' name='checkbox' class='check' data-id='" + data.CustomerNum + "' /></td><td>" + data.CustomerNum + "</td><td>" + data.CustomerName + "</td><td>" + data.Phone + "</td><td>" + data.Fax + "</td><td>" + Datte(data.CreateTime) + "</td><td></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm' onclick='divUpdateShow(" + data.CustomerNum + ")'><i class='layui-icon'>&#xe642;</i></button><button type='button' class='layui-btn layui-btn-primary layui-btn-sm' onclick='Del(" + data.CustomerNum + ")'><i class='layui-icon'>&#xe640;</i> </button></div></td></tr>");
                });
            },
            //请求失败后的回调函数
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }

    //全选以及反选
    function quanxuan(objName, type) {
        var objNameList = document.getElementsByName(objName);
        if (null != objNameList) {
            for (var i = 0; i < objNameList.length; i++) {
                if (objNameList[i].checked == true) {
                    if (type != 'checkall') {  // 非全选
                        objNameList[i].checked = false;
                    }
                } else {
                    if (type != 'uncheckall') {  // 非取消全选
                        objNameList[i].checked = true;
                        //console.log($("input[name='checkbox']").data("id"));
                        //alert($("input[name='checkbox']").data("id"));

                    }
                }
            }
        }
    }

    //删除
    function Del(id) {
        alert(id);
        if (confirm('是否删除?')) {
            $.ajax({
                type: "POST",
                url: "/Yangwenjie/delCustomer",
                data: "{Id:'" + id + "'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("删除成功");
                        PageList();
                        window.location.reload();
                    }
                    else {
                        alert("删除失败");
                    }
                },
                error: function (ex) {
                    alert(ex.responseText);
                }
                ,
            });
        }
    }

    function divUpdateShow(id) {
        alert(id);
        $("#layui-layer1").css("display", "inline-block");
        layui.use('layer', function () {
            var layer = layui.layer;
            layer.open({
                title: ['添加产品', 'font-size:15px'],
                area: ["400px", "370px"], //宽高
                btn: ['确定', '关闭'],
                type: 1,
                shade: 0,
                content: $('#tan'),
                yes: function (index, layero) {
                    $.ajax({
                        type: "POST",
                        url: "/Yangwenjie/upCustomerById",
                        data: "{cus:{CustomerName:'" + $("[name='CustomerName']").val() + "',Remark:'" + $("[name='Remark']").val() + "',Fax:'" + $("[name='Fax']").val() + "',Email:'" + $("[name='Email']").val() + "',Phone:'" + $("[name='Phone']").val() + "'},id:'" + id + "'}",
                        dataType: "json",
                        contentType: "application/json",
                        success: function (result) {
                            if (result > 0) {
                                alert("修改成功");

                                $("#layui-layer1").css("display", "none");

                                PageList();

                                //setTimeout(function () { parent.layer.close() }, 100);//延迟
                            }
                            else {
                                alert("修改失败");
                            }
                        },
                        //请求失败后的回调函数
                        error: function (ex) {
                            alert(ex.responseText);
                        }
                    });
                },
                cancel: function () {//右上角关闭毁回调
                    //return false;
                }
            })
        })
        $.ajax({
            type: "POST",
            url: "/Yangwenjie/CustomerSelectById",
            data: "{Id:'" + id + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    $("#Text5").val(data.Id);
                    $("#Text2").val(data.CustomerName);
                    $("#Text3").val(data.Remark);
                    $("#Text4").val(data.Fax);
                    $("#Text6").val(data.Email);
                    $("#Text7").val(data.Phone);
                })
            },
            error: function (ex) {
                alert(ex.responseText);
            }
            ,
        });
    }
    


    //新增
    function divInsertShow() {
        //alert(1);
        $("#layui-layer1").css("display", "inline-block");
        layui.use('layer', function () {
            var layer = layui.layer;
            layer.open({
                title: ['添加产品', 'font-size:15px'],
                area: ["400px", "370px"], //宽高
                btn: ['确定', '关闭'],
                type: 1,
                shade: 0,
                content: $('#tan'),
                yes: function (index, layero) {

                    $.ajax({
                        type: "POST",
                        url: "/Yangwenjie/AddCustomer",
                        data: "{cus:{CustomerName:'" + $("#Text2").val() + "',Remark:'" + $("#Text3").val() + "',Fax:'" + $("#Text4").val() + "',Email:'" + $("#Text6").val() + "',Phone:'" + $("#Text7").val() + "'}}",
                        dataType: "json",
                        contentType: "application/json",
                        success: function (result) {
                            if (result > 0) {
                                alert("新增成功");
                                $("#layui-layer1").css("display", "none");
                                PageList();
                                window.location.reload();
                            }
                            else {
                                alert("新增失败");
                            }
                        },
                        //请求失败后的回调函数
                        error: function (ex) {
                            alert(ex.responseText);
                        }
                    });
                },
                cancel: function () {//右上角关闭毁回调
                    //return false;
                }
            })
        })
    }


    function CheckboxYN() {
        if ($("input[name=checkbox]:checked").length > 0) {
            if (confirm("确定要删除吗？")) {
                var fan = 0;
                var list = []
                $.each($("[name='checkbox']"), function (index, result) {
                    //alert($(this).is("checked"));
                    //console.log(result);
                    if ($(this).prop("checked")) {
                        list.push($(this).data("id"));

                    }
                });
                $.each(list, function (index2, result2) {
                    //alert(result2);
                    $.ajax({
                        type: "POST",
                        url: "/Yangwenjie/delCustomer",
                        data: "{id:" + result2 + "}",
                        dataType: "json",
                        contentType: "application/json",
                        success: function (result) {
                            //console.log(result);
                            if (result > 0) {
                                alert("删除成功");
                                window.location.reload();

                            } else {
                                alert("删除失败");
                            }
                        },
                        error: function (ex) {
                            alert(ex.responseText);
                        }
                    });

                })
            };
        }
        else {
            alert("请先选择你要删除的数据");
        }
    }
</script>
