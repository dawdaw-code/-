    function quanxuan(objName, type) {
        var objNameList = document.getElementsByName(objName);
        if (null != objNameList) {
            for (var i = 0; i < objNameList.length; i++) {
                if (objNameList[i].checked == true) {
                    if (type != 'checkall') {  // 非全选
                        objNameList[i].checked = false;
                    }
                } else {
                    if (type != 'uncheckall') {  // 非取消全选
                        objNameList[i].checked = true;
                        //console.log($("input[name='checkbox']").data("id"));
                        //alert($("input[name='checkbox']").data("id"));

                    }
                }
            }
        }
    }


    //时间格式转化
    function Datte(time) {
        var date = new Date(parseInt(time.substr(6)));
        return date.toLocaleDateString();
    }



    function CheckboxYN() {
        if ($("input[name=checkbox]:checked").length > 0) {
            if (confirm("确定要删除吗？")) {
                var fan = 0;
                var list = []
                $.each($("[name='checkbox']"), function (index, result) {
                    //alert($(this).is("checked"));
                    //console.log(result);
                    if ($(this).prop("checked")) {
                        list.push($(this).data("id"));

                    }
                });
                $.each(list, function (index2, result2) {
                    //alert(result2);
                    $.ajax({
                        type: "POST",
                        url: "/Yangwenjie/delDepart",
                        data: "{id:" + result2 + "}",
                        dataType: "json",
                        contentType: "application/json",
                        success: function (result) {
                            //console.log(result);
                            if (result > 0) {
                                alert("删除成功");
                                window.location.reload();

                            } else {
                                alert("删除失败");
                            }
                        },
                        error: function (ex) {
                            alert(ex.responseText);
                        }
                    });

                })
            };
        }
        else {
            alert("请先选择你要删除的数据");
        }
    }

    //删除
    function Del(id) {
        if (confirm('是否删除?')) {
            $.ajax({
                type: "POST",
                url: "/Yangwenjie/delDepart",
                data: "{Id:'" + id + "'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("删除成功");
                        PageList();
                        window.location.reload();
                    }
                    else {
                        alert("删除失败");
                    }
                },
                error: function (ex) {
                    alert(ex.responseText);
                }
                ,
            });
        }
    }

    //编辑修改弹出层
    function divUpdateShow(id) {
        layer.prompt({
            //formType: 2,
            value: '',
            title: '编辑部门',
            area: ['200px', '30px'] //自定义文本域宽高
            , success: function (layero) {
                layero.find(".layui-layer-content").prepend('<div style="margin-bottom: 15px;">部门名称</div>')
            }
        }, function (value, index, elem) {
            //alert(value); //得到value
            layer.close(index);

            $.ajax({
                type: "POST",
                url: "/Yangwenjie/upDepartById",
                data: "{DepartName:'" + value + "',id:'" + id + "'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("修改成功");
                        PageList();
                        window.location.reload();
                    }
                    else {
                        alert("修改失败");
                    }
                },
                //请求失败后的回调函数
                error: function (ex) {
                    alert(ex.responseText);
                }
            });
        });
    }

    //编辑新增弹出层
    function divInsertShow() {

        layer.prompt({
            //formType: 2,
            value: '',
            title: '新增部门',
            area: ['200px', '30px'] //自定义文本域宽高
            , success: function (layero) {
                layero.find(".layui-layer-content").prepend('<div style="margin-bottom: 15px;">部门名称</div>')
            }
        }, function (value, index, elem) {
            //alert(value); //得到value
            layer.close(index);

            $.ajax({
                type: "POST",
                url: "/Yangwenjie/Add",
                data: "{det:{DepartName:'" + value + "'}}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("新增成功");
                        PageList();
                        window.location.reload();
                        //$(".layui-laypage-btn").click()
                    }
                    else {
                        alert("新增失败");
                    }
                },
                //请求失败后的回调函数
                error: function (ex) {
                    alert(ex.responseText);
                }
            });
        });
    }
