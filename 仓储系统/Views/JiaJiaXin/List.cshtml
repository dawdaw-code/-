        $.ajax({
            type: "POST",
            url: "/JiaJiaXin/EditProductCategory",
            //data: "{pc:{id:"+id+",animalName:'" + $("#animalName").val() + "',typeid:'" + $("#select1").val() + "',color:'" + $("#color").val() + "',weight:'" + $("#weight").val() + "',height:'" + $("#height").val() +"'}}",
