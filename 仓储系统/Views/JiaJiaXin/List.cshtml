                    PageList();
                }
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
        //});
    }















    function Gai(id) {
        divShow();
        $.ajax({
            type: "POST",
            url: "/JiaJiaXin/GetById",
            data: "{Id:" + id + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                $.each(result, function (index, data) {
                    $("[name='Id']").val(data.Id);
                    $("[name='PCateName']").val(data.PCateName);
                    $("[name='Remark']").val(data.Remark);
                });
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }



    function PageList() {
        $.ajax({
            type: "post",
            url: "/JiaJiaXin/GetQuery",
            data: "{pageIndex:'" + pageIndex + "',pageSize:'" + pageSize + "',pc:{PCateName:'" + $("#txtCateName").val() + "'}}",
            dataType: "json",
            async: false,
            contentType: "application/json",
            success: function (result) {
                $("#tbody1 tr").remove();
                rows = result.PageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tbody1").append("<tr style='text - align: center;'><td><input id='Checkbox1' type='checkbox' /></td><td id='hao'>" + data.Id + "</td><td>" + data.PCateName + "</td><td>" + data.CreateUser + "</td><td>" + ConvertTime(data.CreateTime) + "</td><td>" + data.Remark + "</td><td> <button type='button' id='btnGai' class='layui-btn layui-btn-sm'onclick='Gai(" + data.Id + ")'><i class='layui-icon layui-icon-edit'></i></button><button type='button' class='layui-btn layui-btn-sm' onclick='Del(" + data.Id + ")'><i class='layui-icon layui-icon-delete'></i></button></td></tr>");
                });
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }




    function ConvertTime(time) {
        var date = new Date(parseInt(time.substr(6)));
        return date.toLocaleDateString();
    }




    function Del(id) {
        if (confirm('是否删除?')) {
            $.ajax({
                type: "POST",
                url: "/JiaJiaXin/DelCategory",
                data: "{Id:'" + id + "'}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("删除成功");
                        PageList();
                    }
                    else {
                        alert("删除失败");
                    }
                },
                error: function (ex) {
                    alert(ex.responseText);
                }
                ,
            });
        }
    }

</script>




