                }
            });
        });

    });

   
    function divShow() {
        layui.use('layer', function () {
            var layer = layui.layer;
            layer.open({
                title: ['添加产品类别', 'font-size:15px'],
                area: ['420px', '190px'], //宽高
                type: 1,
                shade: 0,
