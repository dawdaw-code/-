                    , last: false //不显示尾页

                }
                , cols: [[
                    { field: 'sex1', title: '<input id="Checkbox1" type="checkbox" />', align: 'center', width: 60 }
                    , { field: 'sex', title: '序号', sort: true, width: 75 }
                    , { field: 'city', title: '编号', width: 76 }
                    , { field: 'sign', title: '显示名' }
                    , { field: 'classify', title: '上限', align: 'center' } //单元格内容水平居中
                    , { field: 'experience', title: '下限', sort: true, align: 'right' } //单元格内容水平居中
                    , { field: 'score', title: '价格', sort: true, align: 'right' }
                    , { field: 'wealth', title: '规格', sort: true, align: 'right' }
                    , { field: 'wealth1', title: '类别', sort: true, align: 'right' }
                    , { field: 'wealth2', title: '单位', sort: true, align: 'right' }
                    , { field: 'wealth3', title: '备注', sort: true, align: 'right' }
                    , { field: 'wealth4', title: '操作', align: 'center' }
                ]]

