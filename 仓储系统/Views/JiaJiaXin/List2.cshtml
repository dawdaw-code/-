    function PageList() {
        $.ajax({
            type: "post",
            url: "/JiaJiaXin/GetQueryPro",
            data: "{pageIndex:'" + pageIndex + "',pageSize:'" + pageSize + "',pc:{ProductName:'" + $("#ProductName").val() + "'}}",
            dataType: "json",
            contentType: "application/json",
            async: false,
            success: function (result) {
                $("#tbody1 tr").remove();
                rows = result.pageCount;
                $.each(result.DataList, function (index, data) {
                    $("#tbody1").append("<tr style='text-align:center;'><td><input id='Checkbox1' type='checkbox' /></td><td id='hao'>" + data.Id + "</td><td>" + data.ProductNum + "</td><td>" + data.ProductName + "</td><td>" + data.MaxNum + "</td><td>" + data.MinNum + "</td><td>" + data.InPrice + "</td><td>" + data.Size + "</td><td>" + data.PCateId + "</td><td>" + data.MeasureId + "</td><td>" + data.Remark + "</td><td> <button type='button' class='layui-btn layui-btn-sm'><i class='layui-icon layui-icon-edit'></i></button><button type='button' class='layui-btn layui-btn-sm' onclick='Del(" + data.Id + ")'><i class='layui-icon layui-icon-delete'></i></button></td></tr>");
